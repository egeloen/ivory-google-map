<?xml version="1.0" ?>

<serializer
    xmlns="http://egeloen.fr/schema/ivory-serializer"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://egeloen.fr/schema/ivory-serializer
                        http://egeloen.fr/schema/ivory-serializer/mapping-1.0.xsd"
>
    <class
        name="Ivory\GoogleMap\Service\DistanceMatrix\Response\DistanceMatrixElement"
        exclusion-policy="all"
    >
        <property
            name="status"
            type="string"
            expose="true"
        />

        <property
            name="distance"
            type="Ivory\GoogleMap\Service\Base\Distance"
            expose="true"
        />

        <property
            name="duration"
            type="Ivory\GoogleMap\Service\Base\Duration"
            expose="true"
        />

        <property
            name="durationInTraffic"
            type="Ivory\GoogleMap\Service\Base\Duration"
            expose="true"
        />

        <property
            name="fare"
            type="Ivory\GoogleMap\Service\Base\Fare"
            expose="true"
        />
    </class>
</serializer>
