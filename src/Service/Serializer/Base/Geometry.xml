<?xml version="1.0" ?>

<serializer
    xmlns="http://egeloen.fr/schema/ivory-serializer"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://egeloen.fr/schema/ivory-serializer
                        http://egeloen.fr/schema/ivory-serializer/mapping-1.0.xsd"
>
    <class
        name="Ivory\GoogleMap\Service\Base\Geometry"
        exclusion-policy="all"
    >
        <property
            name="location"
            type="Ivory\GoogleMap\Base\Coordinate"
            expose="true"
        />

        <property
            name="locationType"
            type="string"
            expose="true"
        />

        <property
            name="viewport"
            type="Ivory\GoogleMap\Base\Bound"
            expose="true"
        />

        <property
            name="bound"
            alias="bounds"
            type="Ivory\GoogleMap\Base\Bound"
            expose="true"
        />
    </class>
</serializer>
